---
interface Props {
  language?: string;
  title?: string;
  showLineNumbers?: boolean;
}

const { language = '', title = '', showLineNumbers = false } = Astro.props;
---

<div class="code-block-wrapper">
  {title && <div class="code-block-title">{title}</div>}
  <div class="code-block-container" data-language={language}>
    <button class="copy-button" aria-label="Copy code">
      <span class="copy-icon">Copy</span>
      <span class="copied-icon">Copied!</span>
    </button>
    <slot />
  </div>
</div>

<style>
  .code-block-wrapper {
    position: relative;
    margin: var(--spacing-line) 0;
  }

  .code-block-title {
    font-size: 0.85rem;
    color: var(--color-foreground-alt);
    background: var(--color-background-alt);
    border: var(--border-width-thick) solid var(--color-foreground-alt);
    border-bottom: none;
    padding: 0.5ch 1ch;
    display: inline-block;
  }

  .code-block-container {
    position: relative;
  }

  .code-block-container :global(pre) {
    margin-top: 0;
  }

  .copy-button {
    position: absolute;
    top: 0.5rem;
    right: 0.5rem;
    background: var(--color-background);
    color: var(--color-foreground-alt);
    border: 1px solid var(--color-foreground-alt);
    padding: 0.25rem 0.5rem;
    font-family: var(--font-family-mono);
    font-size: 0.75rem;
    cursor: pointer;
    z-index: 10;
    transition: all 0.2s ease;
  }

  .copy-button:hover {
    color: var(--color-foreground);
    border-color: var(--color-foreground);
  }

  .copy-button.copied {
    color: var(--color-accent);
    border-color: var(--color-accent);
  }

  .copied-icon {
    display: none;
  }

  .copy-button.copied .copy-icon {
    display: none;
  }

  .copy-button.copied .copied-icon {
    display: inline;
  }
</style>

<script>
  // Initialize copy buttons
  function initCopyButtons() {
    document.querySelectorAll('.copy-button').forEach(button => {
      if (button.dataset.initialized) return;
      button.dataset.initialized = 'true';

      button.addEventListener('click', async () => {
        const container = button.closest('.code-block-container');
        const codeElement = container?.querySelector('pre code') || container?.querySelector('pre');

        if (codeElement) {
          const code = codeElement.textContent || '';

          try {
            await navigator.clipboard.writeText(code);
            button.classList.add('copied');

            setTimeout(() => {
              button.classList.remove('copied');
            }, 2000);
          } catch (err) {
            console.error('Failed to copy:', err);
          }
        }
      });
    });
  }

  // Run on page load
  initCopyButtons();

  // Re-run on view transitions
  document.addEventListener('astro:after-swap', initCopyButtons);
</script>
