---
import BaseLayout from '../../layouts/BaseLayout.astro';
import BlogPostCard from '../../components/BlogPostCard.astro';
import { getCollection } from 'astro:content';

const allPosts = await getCollection('blog', ({ data }) => !data.draft);
const sortedPosts = allPosts.sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<BaseLayout title="AI Engineering Blog" description="Deep dives on agentic AI patterns, Claude Code, context engineering, and production LLM systems. Code-first tutorials for senior engineers.">
  <h1>AI Engineering Articles</h1>
  <p class="subtitle">Production patterns, agent architecture, and honest engineering.</p>

  <hr />

  {sortedPosts.length > 0 ? (
    <div class="posts-list">
      {sortedPosts.map((post) => (
        <BlogPostCard
          title={post.data.title}
          description={post.data.description}
          pubDate={post.data.pubDate}
          slug={post.slug}
          tags={post.data.tags}
        />
      ))}
    </div>
  ) : (
    <p class="text-alt">No posts yet. Check back soon.</p>
  )}
</BaseLayout>

<style>
  .subtitle {
    color: var(--color-text-muted, #888);
    margin-top: calc(var(--spacing-line) * -0.5);
    margin-bottom: var(--spacing-line);
  }

  .posts-list {
    margin-top: var(--spacing-line);
  }
</style>
