---
interface Props {
  title: string;
  description: string;
  pubDate: Date;
  slug: string;
  tags?: string[];
}

const { title, description, pubDate, slug, tags = [] } = Astro.props;

const formattedDate = pubDate.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'short',
  day: 'numeric',
});
---

<article class="post-card">
  <header>
    <time datetime={pubDate.toISOString()} class="text-alt">{formattedDate}</time>
    <h3>
      <a href={`/blog/${slug}`}>{title}</a>
    </h3>
  </header>
  <p class="text-alt">{description}</p>
  {tags.length > 0 && (
    <div class="tags">
      {tags.map((tag) => (
        <span class="tag">[{tag}]</span>
      ))}
    </div>
  )}
</article>

<style>
  .post-card {
    padding: var(--spacing-line) 0;
    border-bottom: 1px solid var(--color-foreground-alt);
  }

  .post-card:first-child {
    padding-top: 0;
  }

  .post-card header {
    margin-bottom: calc(var(--spacing-line) / 2);
  }

  .post-card h3 {
    margin: 0;
    font-size: 1rem;
    text-transform: none;
  }

  .post-card h3 a {
    text-decoration: none;
  }

  .post-card h3 a:hover {
    text-decoration: underline;
    text-decoration-thickness: var(--border-width-thick);
  }

  .post-card p {
    margin: calc(var(--spacing-line) / 2) 0;
    font-size: 0.875rem;
  }

  .tags {
    font-size: 0.75rem;
    margin-top: calc(var(--spacing-line) / 2);
  }

  .tag {
    color: var(--color-foreground-alt);
    margin-right: 1ch;
  }
</style>
