{
  "name": "acidbath",
  "type": "module",
  "version": "1.0.0",
  "scripts": {
    "dev": "astro dev",
    "build": "node scripts/generate-llms-txt.js && astro build",
    "preview": "astro preview",
    "astro": "astro",
    "deploy": "npm run build && wrangler pages deploy ./dist",
    "generate:llms": "node scripts/generate-llms-txt.js",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:seo": "playwright test --grep 'SEO'",
    "test:perf": "playwright test --grep 'Performance'",
    "test:report": "playwright show-report"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.6",
    "@astrojs/mdx": "^4.3.13",
    "@astrojs/rss": "^4.0.14",
    "@tailwindcss/vite": "^4.1.18",
    "astro": "^5.16.5",
    "mermaid": "^11.12.2",
    "playwright": "^1.57.0",
    "rehype-mermaid": "^3.0.0",
    "tailwindcss": "^4.1.18"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/node": "^25.0.2",
    "typescript": "^5.9.3",
    "wrangler": "^4.54.0"
  }
}
