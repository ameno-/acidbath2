---
interface Props {
  language?: string;
  title?: string;
  filename?: string;
  showLineNumbers?: boolean;
  highlightLines?: number[];
  maxPreviewLines?: number;
  defaultExpanded?: boolean;
}

const {
  language = '',
  title = '',
  filename = '',
  showLineNumbers = true,
  highlightLines = [],
  maxPreviewLines = 8,
  defaultExpanded = false
} = Astro.props;

// Get the code content from the slot to count lines
const slotContent = await Astro.slots.render('default');
const lineCount = (slotContent.match(/\n/g) || []).length + 1;
const shouldCollapse = lineCount > 15 && !defaultExpanded;

const displayTitle = filename || title || (language ? language.toUpperCase() : '');
---

<div class="code-block-wrapper" data-line-count={lineCount}>
  {displayTitle && (
    <div class="code-block-header">
      <span class="code-block-label">{displayTitle}</span>
      {language && !filename && !title && (
        <span class="language-badge">{language}</span>
      )}
    </div>
  )}
  <div
    class={`code-block-container ${shouldCollapse ? 'collapsible' : ''} ${showLineNumbers ? 'with-line-numbers' : ''}`}
    data-language={language}
    data-max-preview={maxPreviewLines}
    data-default-expanded={defaultExpanded}
  >
    <button class="copy-button" aria-label="Copy code">
      <span class="copy-icon">Copy</span>
      <span class="copied-icon">Copied!</span>
    </button>
    {shouldCollapse && (
      <button class="collapse-toggle" aria-label="Toggle code visibility">
        <span class="expand-text">Expand ({lineCount} lines)</span>
        <span class="collapse-text">Collapse</span>
      </button>
    )}
    <div class="code-content">
      <slot />
    </div>
    {shouldCollapse && (
      <div class="code-fade" aria-hidden="true"></div>
    )}
  </div>
</div>

<style>
  .code-block-wrapper {
    position: relative;
    margin: var(--space-6) 0;
  }

  .code-block-header {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    background: var(--color-background-alt);
    border: var(--border-width-thick) solid var(--color-foreground-alt);
    border-bottom: none;
    padding: var(--space-2) var(--space-4);
    border-radius: var(--radius-sm) var(--radius-sm) 0 0;
  }

  .code-block-label {
    font-size: var(--text-sm);
    color: var(--color-foreground);
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .language-badge {
    font-size: var(--text-xs);
    color: var(--color-accent-primary);
    background: rgba(57, 255, 20, 0.1);
    padding: var(--space-1) var(--space-2);
    border-radius: var(--radius-sm);
    font-weight: 600;
    text-transform: uppercase;
  }

  .code-block-container {
    position: relative;
    background: var(--color-background-code);
    border: var(--border-width-thick) solid var(--color-foreground-alt);
    border-radius: var(--radius-sm);
  }

  .code-block-header + .code-block-container {
    border-top-left-radius: 0;
    border-top-right-radius: 0;
  }

  .code-block-container.collapsible {
    max-height: calc(var(--space-6) * 8);
    overflow: hidden;
    transition: max-height var(--transition-slow);
  }

  .code-block-container.collapsible.expanded {
    max-height: none;
  }

  .code-content {
    position: relative;
  }

  .code-block-container :global(pre) {
    margin: 0;
    padding: var(--space-4);
    background: transparent;
    border: none;
    overflow-x: auto;
  }

  .code-block-container.with-line-numbers :global(pre) {
    padding-left: var(--space-12);
  }

  .code-block-container.with-line-numbers :global(code) {
    counter-reset: line;
  }

  .code-block-container.with-line-numbers :global(code .line)::before {
    counter-increment: line;
    content: counter(line);
    display: inline-block;
    width: 3ch;
    margin-left: calc(-1 * var(--space-12) + var(--space-2));
    margin-right: var(--space-4);
    text-align: right;
    color: var(--color-foreground-muted);
    user-select: none;
  }

  /* Syntax highlighting colors (acid green theme) */
  .code-block-container :global(.token.keyword),
  .code-block-container :global(.token.function) {
    color: var(--color-accent-primary);
  }

  .code-block-container :global(.token.string) {
    color: #ff9800;
  }

  .code-block-container :global(.token.comment) {
    color: var(--color-accent-muted);
  }

  .code-block-container :global(.token.number) {
    color: #2196f3;
  }

  .code-block-container :global(.token.operator) {
    color: var(--color-foreground);
  }

  .copy-button {
    position: absolute;
    top: var(--space-2);
    right: var(--space-2);
    background: var(--color-background);
    color: var(--color-foreground-alt);
    border: 1px solid var(--color-foreground-alt);
    padding: var(--space-2) var(--space-3);
    font-family: var(--font-family-mono);
    font-size: var(--text-xs);
    font-weight: 600;
    text-transform: uppercase;
    cursor: pointer;
    z-index: 20;
    transition: all var(--transition-base);
    border-radius: var(--radius-sm);
  }

  .copy-button:hover {
    color: var(--color-foreground);
    border-color: var(--color-foreground);
    background: var(--color-background-hover);
  }

  .copy-button.copied {
    color: var(--color-accent-primary);
    border-color: var(--color-accent-primary);
    background: rgba(57, 255, 20, 0.1);
  }

  .copied-icon {
    display: none;
  }

  .copy-button.copied .copy-icon {
    display: none;
  }

  .copy-button.copied .copied-icon {
    display: inline;
  }

  .collapse-toggle {
    position: absolute;
    bottom: var(--space-2);
    left: 50%;
    transform: translateX(-50%);
    background: var(--color-background);
    color: var(--color-accent-primary);
    border: 2px solid var(--color-accent-primary);
    padding: var(--space-2) var(--space-4);
    font-family: var(--font-family-mono);
    font-size: var(--text-xs);
    font-weight: 700;
    text-transform: uppercase;
    cursor: pointer;
    z-index: 20;
    transition: all var(--transition-base);
    border-radius: var(--radius-sm);
  }

  .collapse-toggle:hover {
    background: var(--color-accent-primary);
    color: var(--color-background);
  }

  .collapse-text {
    display: none;
  }

  .code-block-container.expanded .expand-text {
    display: none;
  }

  .code-block-container.expanded .collapse-text {
    display: inline;
  }

  .code-fade {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 8rem;
    background: linear-gradient(
      to bottom,
      transparent 0%,
      var(--color-background-code) 100%
    );
    pointer-events: none;
    transition: opacity var(--transition-base);
  }

  .code-block-container.expanded .code-fade {
    opacity: 0;
  }
</style>

<script>
  // Initialize code blocks
  function initCodeBlocks() {
    // Initialize copy buttons
    document.querySelectorAll('.copy-button').forEach(button => {
      if (button.dataset.initialized) return;
      button.dataset.initialized = 'true';

      button.addEventListener('click', async () => {
        const container = button.closest('.code-block-container');
        const codeElement = container?.querySelector('pre code') || container?.querySelector('pre');

        if (codeElement) {
          const code = codeElement.textContent || '';

          try {
            await navigator.clipboard.writeText(code);
            button.classList.add('copied');

            setTimeout(() => {
              button.classList.remove('copied');
            }, 2000);
          } catch (err) {
            console.error('Failed to copy:', err);
          }
        }
      });
    });

    // Initialize collapse toggles
    document.querySelectorAll('.collapse-toggle').forEach(button => {
      if (button.dataset.initialized) return;
      button.dataset.initialized = 'true';

      button.addEventListener('click', () => {
        const container = button.closest('.code-block-container');
        if (container) {
          container.classList.toggle('expanded');
        }
      });
    });
  }

  // Run on page load
  initCodeBlocks();

  // Re-run on view transitions
  document.addEventListener('astro:after-swap', initCodeBlocks);
  document.addEventListener('astro:page-load', initCodeBlocks);
</script>
