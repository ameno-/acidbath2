---
import BaseLayout from '../layouts/BaseLayout.astro';
import BlogPostCard from '../components/BlogPostCard.astro';
import { getCollection } from 'astro:content';

const allPosts = await getCollection('blog', ({ data }) => !data.draft);
const recentPosts = allPosts
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 3);
---

<BaseLayout title="Production AI Engineering" description="Code-first deep dives on AI agents, context engineering, and production LLM patterns. No hype, just what works.">

  <h1 class="page-title">Production AI Patterns for Senior Engineers</h1>

  <section class="recent-posts">
    <h2>Recent Posts</h2>
    {recentPosts.length > 0 ? (
      <div class="posts-list">
        {recentPosts.map((post) => (
          <BlogPostCard
            title={post.data.title}
            description={post.data.description}
            pubDate={post.data.pubDate}
            slug={post.slug}
            tags={post.data.tags}
          />
        ))}
      </div>
    ) : (
      <p class="text-alt">No posts yet. Check back soon.</p>
    )}
    {recentPosts.length > 0 && (
      <p>
        <a href="/blog">View all posts â†’</a>
      </p>
    )}
  </section>
</BaseLayout>

<style>
  .page-title {
    font-size: 1.1rem;
    font-weight: 500;
    color: var(--color-text-muted, #888);
    margin-bottom: calc(var(--spacing-line) * 1.5);
    letter-spacing: 0.02em;
  }

  .recent-posts h2 {
    margin-bottom: var(--spacing-line);
  }

  .posts-list {
    margin-bottom: calc(var(--spacing-line) * 2);
  }
</style>
