---
import Navigation from './Navigation.astro';
---

<header>
  <a href="/" class="banner-link">
    <div class="banner">
      <img src="/assets/banner.png" alt="ACIDBATH" class="banner-img" />
    </div>
  </a>
  <p class="tagline">The critical, code-first voice that senior technical leaders trust.</p>
  <Navigation />
  <hr class="separator" />
</header>

<style>
  header {
    margin-bottom: calc(var(--spacing-line) * 2);
  }

  .banner-link {
    display: block;
    text-decoration: none;
  }

  .banner {
    width: 100%;
    max-height: 180px;
    overflow: hidden;
  }

  .banner-img {
    width: 100%;
    height: 180px;
    object-fit: cover;
    object-position: center;
  }

  .tagline {
    margin: calc(var(--spacing-line) * 0.5) 0;
    font-size: 0.9rem;
    color: var(--color-text-muted, #888);
    font-style: italic;
  }

  .separator {
    border: none;
    border-top: 1px solid var(--color-border, #333);
    margin: calc(var(--spacing-line) * 1) 0;
  }
</style>
